{
  "common": {
    "name": "googlebroadcast",
    "version": "0.3.0",
    "news": {
      "0.3.0": {
        "en": "Added Chromecast TTS support for reliable targeting via IP address"
      },
      "0.2.1": {
        "en": "Extended/fixed language support for different device/assistant languages"
      },
      "0.2.0": {
        "en": "Added language support and fixed double broadcasts"
      },
      "0.1.0": {
        "en": "Beta release"
      },
      "0.0.1": {
        "en": "initial release"
      }
    },
    "title": "Google Assistant Broadcast",
    "desc": {
      "en": "Broadcasts text messages via Google Assistant SDK or Chromecast TTS"
    },
    "authors": [
      "User"
    ],
    "keywords": [
      "ioBroker",
      "google",
      "assistant",
      "broadcast",
      "tts"
    ],
    "platform": "Javascript/Node.js",
    "main": "main.js",
    "icon": "googlebroadcast.png",
    "enabled": true,
    "extIcon": "https://raw.githubusercontent.com/GreatSUN/iobroker.googlebroadcast/master/admin/googlebroadcast.png",
    "readme": "https://github.com/GreatSUN/iobroker.googlebroadcast/blob/master/README.md",
    "loglevel": "info",
    "mode": "daemon",
    "type": "multimedia",
    "compact": true,
    "connectionType": "cloud",
    "dataSource": "push",
    "materialize": true,
    "dependencies": [
      {
        "js-controller": ">=3.2.0"
      }
    ]
  },
  "native": {
    "jsonCredentials": "",
    "authCode": "",
    "deviceModelId": "iobroker-model",
    "language": "en-US",
    "broadcastMode": "assistant",
    "ttsSpeed": 1,
    "scanInterval": 30
  },
  "objects": [],
  "instanceObjects": [
    {
      "_id": "broadcast_all",
      "type": "state",
      "common": {
        "name": "Broadcast to All Devices",
        "type": "string",
        "role": "text",
        "read": true,
        "write": true,
        "def": ""
      },
      "native": {}
    },
    {
      "_id": "tokens",
      "type": "state",
      "common": {
        "name": "Google OAuth Tokens",
        "type": "string",
        "role": "value",
        "read": true,
        "write": true,
        "def": ""
      },
      "native": {}
    },
    {
      "_id": "info",
      "type": "channel",
      "common": {
        "name": "Information"
      },
      "native": {}
    },
    {
      "_id": "info.connection",
      "type": "state",
      "common": {
        "role": "indicator.connected",
        "name": "If connected to Google Assistant",
        "type": "boolean",
        "read": true,
        "write": false,
        "def": false
      },
      "native": {}
    }
  ]
}